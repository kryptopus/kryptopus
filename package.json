{
  "name": "kryptopus",
  "description": "Cryptocurrency manager",
  "version": "0.2.0",
  "author": "neolao <contact@neolao.com>",
  "repository": "https://github.com/kryptopus/kryptopus.git",
  "license": "MIT",
  "bin": {
    "kryptopus": "./cli"
  },
  "engines": {
    "node": ">= 12"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:watch": "esw --watch --cache --clear .",
    "test": "jest",
    "test:watch": "jest --watch",
    "blockchain:list": "pm2 list",
    "blockchain:btc": "pm2 startOrRestart ecosystem.config.js --only BTC",
    "blockchain:btc:logs": "pm2 logs BTC"
  },
  "dependencies": {
    "@kryptopus/networks": "0.1.1",
    "axios": "^0.18.1",
    "bip32": "^1.0.4",
    "bip39": "^2.6.0",
    "bitcoinjs-lib": "^4.0.5",
    "chalk": "^2.4.2",
    "pm2": "^3.5.1",
    "solfegejs": "^4.0.4",
    "tiny-secp256k1": "^1.1.2",
    "wif": "^2.0.6"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-plugin-solfegejs": "1.0.7",
    "eslint-watch": "^4.0.2",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:solfegejs/recommended"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest --lastCommit"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "jest": {
    "verbose": true,
    "transformIgnorePatterns": [
      "<rootDir>"
    ]
  }
}
