{
    "name": "kryptopus",
    "description": "Cryptocurrency manager",
    "version": "0.1.2",
    "author": "neolao <contact@neolao.com>",
    "repository": "https://github.com/kryptopus/kryptopus.git",
    "license": "MIT",
    "main": "lib/Bundle.js",
    "files": [
        "lib",
        "src"
    ],
    "engines": {
        "node": ">= 9"
    },
    "dependencies": {
        "colors": "^1.2.3",
        "config-yaml": "^1.0.6",
        "decko": "^1.2.0",
        "npm": "^6.0.0",
        "solfegejs": "^3.1.1",
        "winston": "^3.0.0-rc5"
    },
    "devDependencies": {
        "babel-cli": "^6.7",
        "babel-preset-solfege": "^1.1.2",
        "eslint": "^3.19",
        "eslint-plugin-solfege": "^1.0",
        "flow-bin": "^0.71.0",
        "watch": "^1.0.2"
    },
    "scripts": {
        "flow-stop": "flow stop",
        "flow-start": "flow start",
        "flow-restart": "flow stop && flow start",
        "lint": "eslint --ext .js src",
        "prepare": "npm run build",
        "prebuild": "npm run lint && flow",
        "build": "babel --out-dir lib src --copy-files",
        "postbuild": "echo \"\\033[42;30m          READY           \\033[0m\"",
        "watch": "watch 'echo \"\\033[41;37m      START BUILDING      \\033[0m\"; npm run build --silent' ./src",
        "console": "node lib/console.js",
        "bot": "npm run console bot:execute",
        "install-plugins": "npm run console plugin:install-all"
    },
    "babel": {
        "presets": [
            "solfege"
        ],
        "comments": false
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:solfege/recommended"
        ]
    }
}
